<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
<!--
        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@android:color/holo_blue_dark</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


        <item name="android:textColorSecondary">@color/black</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--  <item name="android:layout_gravity">center</item>
          <item name="android:padding">50dp</item>
  -->
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="FirebaseUI.AuthMethodPicker.Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/fui_auth_method_button_width</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clipToPadding">false</item>
        <!-- These have to be padding instead of margin so the shadows aren't clipped. -->
        <item name="android:paddingLeft">65dp</item>
        <item name="android:paddingRight">65dp</item>


    </style>

</resources>
