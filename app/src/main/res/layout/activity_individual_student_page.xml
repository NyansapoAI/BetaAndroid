                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="9"
                        android:id="@+id/paragraphTxtView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@android:color/black"
                        tools:text="One morning, the cow went to the lion. She

" />
                    <NumberPicker
                        android:id="@+id/numberPickerParagraph"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/storyLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/storyHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Story"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/storyTxtView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="9"
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@android:color/black"
                        tools:text="One morning, the cow went to the lion. She" />

                    <NumberPicker
                        android:id="@+id/numberPickerStory"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>


                <TextView
                    android:id="@+id/q1TxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="what did the forest have?" />

                <TextView
                    android:id="@+id/answer1TxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    tools:text="my answer 1" />

                <TextView
                    android:id="@+id/q2TxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="what did the forest have?" />

                <TextView
                    android:id="@+id/answer2TxtView"
